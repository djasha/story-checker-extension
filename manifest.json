{
  "manifest_version": 3,
  "key": "",
  "name": "Story Checker",
  "version": "1.0",
  "description": "Check Instagram and Facebook stories for marketing agencies",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting",
    "identity",
    "sidePanel"
  ],

  "host_permissions": [
    "https://www.instagram.com/*",
    "https://www.facebook.com/*",
    "https://accounts.google.com/o/oauth2/*",
    "https://sheets.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/*", "https://www.facebook.com/*"],
      "js": ["js/content.js"]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "oauth2": {
    "client_id": "1054820287344-s34s0t2dsi64bjq98hmua0aqfqe1i5jt.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/spreadsheets"
    ]
  }
}
